<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">



    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abhi"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/name"
        android:text="maxcriteria: "
        android:id="@+id/max"
        android:textSize="20sp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/max"
        android:id="@+id/maxincome"
        android:textSize="20sp"
        android:text="abhi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maxincome"
        android:textColor="@color/white"
        android:text="maxavail: "
        android:textSize="20sp"
        android:id="@+id/maxavail"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maxincome"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/maxavail"
        android:textSize="20sp"
        android:id="@+id/maxwin"
        android:text="adfjdf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_below="@id/maxavail"
        android:text="state: "
        android:id="@+id/state"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/state"
        android:textColor="@color/white"
        android:text="absdkjsfhhi"
        android:id="@+id/statename"
        android:textSize="20sp"
        android:layout_below="@id/maxavail"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/statename"
        android:background="@color/white"/>



</RelativeLayout>